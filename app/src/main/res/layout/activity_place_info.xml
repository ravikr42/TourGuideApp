<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tan_background"
    android:orientation="vertical"
    tools:context="com.example.android.tourguideapp.PlaceInfoActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tan_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/place_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:textColor="#827717"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Header" />

        <ImageView
            android:id="@+id/place_image_demonstration"
            android:layout_width="240dp"
            android:layout_height="360dp"
            android:layout_gravity="center"
            tools:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/place_address"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:background="#C6FF00"
                android:text="@string/address"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/place_address_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F4FF81"
                android:paddingLeft="8dp"
                tools:text="Place Address"
                android:textSize="20sp"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/place_timing"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:background="#C6FF00"
                android:text="@string/timing"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/place_timing_detail"
                android:layout_width="match_parent"
                android:paddingLeft="8dp"
                android:layout_height="wrap_content"
                android:background="#F4FF81"
                tools:text="Place timing"
                android:textSize="20sp"
                android:textStyle="italic" />

        </LinearLayout>


    </LinearLayout>
</ScrollView>
