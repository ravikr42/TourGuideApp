<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.tourguideapp.MainActivity">

    <TextView
        android:id="@+id/temples"
        style="@style/CategoryStyle"
        android:text="@string/category_temples"
        android:background="?android:attr/selectableItemBackground"/>


    <TextView
        android:id="@+id/outdoor"
        style="@style/CategoryStyle"
        android:layout_below="@id/temples"
        android:text="@string/category_outdoor"
        android:background="?android:attr/selectableItemBackground"/>

    <TextView
        android:id="@+id/theme_parks"
        style="@style/CategoryStyle"
        android:layout_below="@id/outdoor"
        android:text="@string/category_theme_park"
        android:background="?android:attr/selectableItemBackground"/>

    <TextView
        android:id="@+id/resorts"
        style="@style/CategoryStyle"
        android:layout_below="@id/theme_parks"
        android:text="@string/category_resorts"
        android:background="?android:attr/selectableItemBackground"/>

    <TextView
        android:id="@+id/things_to_do"
        style="@style/CategoryStyle"
        android:layout_below="@id/resorts"
        android:text="@string/category_things_todo"
        android:background="?android:attr/selectableItemBackground"/>

</RelativeLayout>
