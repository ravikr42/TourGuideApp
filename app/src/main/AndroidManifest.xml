<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.tourguideapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TempleActivity"
            android:label="@string/category_temples"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".OutdoorActivity"
            android:label="@string/category_outdoor"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ThemeParkActivity"
            android:label="@string/category_theme_park"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ResortsActivity"
            android:label="@string/category_resorts"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ThingsToDoActivity"
            android:label="@string/category_things_todo"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".PlaceInfoActivity"
            android:label="Place Detailed Information" />
    </application>

</manifest>